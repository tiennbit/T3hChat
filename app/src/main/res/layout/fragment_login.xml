<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBFFEB3B"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/custom_logo"
            android:gravity="center"
            android:text="3T"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_36ssp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@drawable/custom_edittext_top"
            android:drawableLeft="@mipmap/ic_account"
            android:hint="Username"
            android:textColor="#000000" />
        <TextView
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp" />
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_bottom"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="***********"
            android:inputType="textPassword"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/custom_button_one"
            android:text="Login"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/btn_go_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="You have not account, register now?"
            android:textColor="#000000" />

    </LinearLayout>


</RelativeLayout>